<Window x:Class="LinearXpert.WindowRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinearXpert"
    mc:Ignorable="d" Height="650" Width="419" Background="Transparent" ResizeMode="NoResize"
    AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Border Background="#cfd5e5" CornerRadius="40" BorderThickness="2" BorderBrush="#ebedf3"
        Padding="20" MouseDown="Border_MouseDown">
        <Grid>
            <Button Name="btnBack" Style="{StaticResource btnBack}" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" FontSize="36" FontWeight="Bold" Click="btnBack_Click">
                <Button.Content>
                    <Image Source="/Resources/back.png" Width="40" Height="40"/>
                </Button.Content>
            </Button>
            <Button Name="btnPower" Style="{StaticResource btnPowerOff}" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,0,0,0" FontSize="36" FontWeight="Bold" Click="btnPower_Click">
                <Button.Content>
                    <Image Source="/Resources/power.png" Width="40" Height="40"/>
                </Button.Content>
            </Button>
            <Label Content="Регистрация" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" FontSize="28" FontWeight="Bold"/>
            <Label Content="Логин" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="36,98,0,0"/>
            <TextBox Name="tbLogin" Style="{StaticResource tbLogReg}" HorizontalAlignment="Center" Margin="0,132,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="302" Height="40" FontSize="20"/>
            <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="37,172,0,0"/>
            <TextBox Name="tbPassword" Style="{StaticResource tbLogReg}" HorizontalAlignment="Center" Margin="0,206,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="302" Height="40" FontSize="20"/>
            <Label Content="Повторите пароль" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="36,246,0,0"/>
            <TextBox Name="tbPasswordRepeat" Style="{StaticResource tbLogReg}" HorizontalAlignment="Center" Margin="0,280,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="302" Height="40" FontSize="20"/>
            <Label Content="Имя" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="36,320,0,0" Width="90"/>
            <TextBox Name="tbName" Style="{StaticResource tbLogReg}" HorizontalAlignment="Left" Margin="36,354,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="141" Height="40" FontSize="20"/>
            <Label Content="Фамилия" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="198,320,0,0" Width="90"/>
            <TextBox Name="tbSurname" Style="{StaticResource tbLogReg}" HorizontalAlignment="Left" Margin="198,354,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="140" Height="40" FontSize="20"/>
            <Label Content="Отчество" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="37,394,0,0" Width="90"/>
            <TextBox Name="tbPatronymic" Style="{StaticResource tbLogReg}" HorizontalAlignment="Left" Margin="36,428,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="141" Height="40" FontSize="20"/>
            <Label Content="Группа" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="198,394,0,0" Width="90"/>
            <ComboBox Name="comboGroups" HorizontalAlignment="Left" Margin="198,428,0,0" VerticalAlignment="Top" Width="140" Height="40" FontSize="20" BorderThickness="3"/>
            <Button Name="btnReg" Content="Зарегистрироваться" HorizontalAlignment="Center" Margin="0,506,0,0" VerticalAlignment="Top" Width="302" Height="53" FontSize="24" Foreground="White" Background="#FF0080FE" Click="btnReg_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="13"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>
