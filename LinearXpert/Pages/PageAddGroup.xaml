<Page x:Class="LinearXpert.Pages.PageAddGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LinearXpert.Pages"
      mc:Ignorable="d" d:DesignHeight="956" d:DesignWidth="1526">
    <Grid>
        <Label Content="Группа:" HorizontalAlignment="Left" Margin="160,158,0,0" VerticalAlignment="Top" Width="102" Height="40" FontSize="24"/>
        <TextBox Name="tbName_Group" Text="{Binding name_Group}" Style="{StaticResource tbPattern}" HorizontalAlignment="Left" Margin="262,158,0,0" VerticalAlignment="Top" TextWrapping="NoWrap" Width="661" Height="40" FontSize="24"/>
        <Button Name="btnSave" Style="{StaticResource btnPattern}" Click="btnSave_Click" HorizontalAlignment="Left" Width="60" Height="60" VerticalAlignment="Top" Background="LightGray" Margin="863,203,0,0">
            <Button.Content>
                <Image Source="/Resources/galochka.png" Width="50" Height="50"/>
            </Button.Content>
        </Button>
        <Button Name="btnBack" Style="{StaticResource btnPattern}" Click="btnBack_Click" HorizontalAlignment="Left" Width="60" Height="60" VerticalAlignment="Top" Background="LightGray" Margin="785,203,0,0">
            <Button.Content>
                <Image Source="/Resources/back.png" Width="50" Height="50"/>
            </Button.Content>
        </Button>
    </Grid>
</Page>
