<Page x:Class="LinearXpert.Pages.PageAddQuestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LinearXpert.Pages"
      mc:Ignorable="d" d:DesignHeight="956" d:DesignWidth="1526">
    <Grid>
        <Label Content="Вопрос:" HorizontalAlignment="Left" Margin="180,128,0,0" VerticalAlignment="Top" Width="102" Height="40" FontSize="24"/>
        <TextBox x:Name="tbName_Question" Text="{Binding name_Question}" Style="{StaticResource tbPattern}" HorizontalAlignment="Left" Margin="282,128,0,0" VerticalAlignment="Top" TextWrapping="Wrap" Width="1092" Height="100" FontSize="24"/>
        <Button Name="btnSave" Style="{StaticResource btnPattern}" Click="btnSave_Click" HorizontalAlignment="Left" Width="60" Height="60" VerticalAlignment="Top" Background="LightGray" Margin="1314,233,0,0">
            <Button.Content>
                <Image Source="/Resources/galochka.png" Width="50" Height="50"/>
            </Button.Content>
        </Button>
        <Button Name="btnBack" Style="{StaticResource btnPattern}" Click="btnBack_Click" HorizontalAlignment="Left" Width="60" Height="60" VerticalAlignment="Top" Background="LightGray" Margin="1236,233,0,0">
            <Button.Content>
                <Image Source="/Resources/back.png" Width="50" Height="50"/>
            </Button.Content>
        </Button>
        <CheckBox Name="chkBoxType" Content="Несколько вариантов ответа" HorizontalAlignment="Left" Margin="282,233,0,0" VerticalAlignment="Top" Width="192">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
            </CheckBox.LayoutTransform>
        </CheckBox>
    </Grid>
</Page>
