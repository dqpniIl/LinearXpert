<Page x:Class="LinearXpert.Pages.PageProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LinearXpert.Pages"
      mc:Ignorable="d" d:DesignHeight="956" d:DesignWidth="1526">
    <Grid>
        <Label Content="Профиль" HorizontalAlignment="Left" Margin="307,68,0,0" VerticalAlignment="Top" FontSize="28" FontWeight="Bold"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="232,129,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox Name="tbSurname" Style="{StaticResource tbPattern}" HorizontalAlignment="Left" Margin="232,168,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="287" FontSize="22"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="232,210,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox Name="tbName" Style="{StaticResource ResourceKey=tbPattern}" HorizontalAlignment="Left" Margin="232,249,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="287" FontSize="22"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="232,292,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox Name="tbPatronymic" Style="{StaticResource ResourceKey=tbPattern}" HorizontalAlignment="Left" Margin="232,331,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="287" FontSize="22"/>
        <StackPanel Margin="232,372,1007,431">
            <Label Name="lblGroup" Content="Группа" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="22"/>
            <ComboBox Name="comboGroups" IsEnabled="False" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="287" Height="42" BorderThickness="3" FontSize="22"/>
            <Button Name="btnSaveProfile" Content="Сохранить" Style="{StaticResource ResourceKey=btnPattern}" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top" Height="41" Width="287" FontSize="22" Click="btnSaveProfile_Click"/>
        </StackPanel>
        <Label Content="Пользователь" HorizontalAlignment="Left" Margin="805,68,0,0" VerticalAlignment="Top" FontSize="28" FontWeight="Bold"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="763,130,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox Name="tbLogin" Style="{StaticResource tbPattern}" HorizontalAlignment="Left" Margin="763,169,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="287" FontSize="22"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="763,211,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox Name="tbPassword" Style="{StaticResource ResourceKey=tbPattern}" Text="***********" IsEnabled="False" HorizontalAlignment="Left" Margin="763,250,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="287" FontSize="22"/>
        <Button Name="btnNewPassword" Content="Поменять пароль" Style="{StaticResource ResourceKey=btnPattern}" HorizontalAlignment="Left" Margin="763,312,0,0" VerticalAlignment="Top" Height="41" Width="287" FontSize="22" Click="btnNewPassword_Click"/>
        <Button Name="btnSaveUser" Content="Сохранить" Style="{StaticResource ResourceKey=btnPattern}" HorizontalAlignment="Left" Margin="763,372,0,0" VerticalAlignment="Top" Height="41" Width="287" FontSize="22" Click="btnSaveUser_Click"/>
    </Grid>
</Page>
